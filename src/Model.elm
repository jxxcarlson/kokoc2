module Model exposing (..)

import Document.Model exposing (Document)
import User.Model exposing (User)
import Document.Default


type alias Model =
    { mode : Mode
    , page : Page
    , name : String
    , username : String
    , email : String
    , password : String
    , maybeCurrentUser : Maybe User
    , message : String
    , documentList : List Document
    , currentDocument : Document
    , windowWidth : Int
    , windowHeight : Int
    , counter : Int
    }


type alias Flags =
    { width : Int
    , height : Int
    }


type Page
    = StartPage
    | ReaderPage


type Mode
    = Public
    | SigningIn
    | SigningUp
    | SignedIn


initialModel : Flags -> Model
initialModel flags =
    ({ mode = Public
     , page = StartPage
     , name = ""
     , username = ""
     , email = ""
     , password = ""
     , maybeCurrentUser = Nothing
     , message = "App started"
     , documentList = []
     , currentDocument = Document.Default.make "TITLE" "CONTENT"
     , windowWidth = flags.width
     , windowHeight = flags.height
     , counter = 0
     }
    )
